{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE" 
            ],
            "cStandard": "c17",
            "cppStandard": "gnu++20",
            "intelliSenseMode": "windows-gcc-x64",
            "mergeConfigurations": false,
            "compilerPath": "C:/SysGCC/mingw64/bin/g++.exe",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "compilerArgs": [
                "-Wall",
                "-Wshadow",
                "-Wconversion",
                "-Wextra"
            ]
        }
    ],
    "version": 4
}
